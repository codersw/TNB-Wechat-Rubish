
<!--主盒子-->
<view class="containers">
  <!--右侧栏-->
  <view class="nav_right" style="margin-top: 0px;">
    <!--如果有数据，才遍历项-->
    <view wx:if="{{cateItems.length > 0}}">
      <block wx:for="{{cateItems}}" wx:key="">
      <!--界面跳转 -->
        <view class="nav_right_items" style="text-align:left;width: 100%;{{index % 2 == 0 ? 'background: #f5f5f5;' : '' }}">
          <text style="padding-left:10px;font-size:14px;float:left;width:30%;overflow: hidden;">{{item.name}}</text>
          <text style="padding-left:10px;font-size:14px;float:left;width:30%;overflow: hidden;">{{item.cname}}</text>
          <text style="padding-left:10px;font-size:14px;float:left;width:30%;overflow: hidden;color:{{item.color}}">{{item.aname}}</text>
        </view>
      </block>
    </view>
    <!--如果无数据，则显示数据-->
    <view class="nodata_text" wx:else>暂无数据</view>
    <view style="font-size:50px;text-align:center;">{{score}}分</view>
    <view>
        <navigator open-type="navigate" hover-class='none' url="/pages/exam/paper/paper" >
            <button>再来一次</button>
         </navigator>
        <button  open-type="share">考考他人</button>
    </view>
    </view>
</view>
