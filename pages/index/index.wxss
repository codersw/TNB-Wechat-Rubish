/**index.wxss**/
/*顶部切换*/
page{  
  background: #f1f1f1;  
}  
 /*左侧栏主盒子*/  
.nav_left{  
  /*设置行内块级元素（没使用定位）*/  
  display: inline-block;  
  width: 25%;  
  height: 100%;  
  text-align: center;
  margin-top: 10px;
  background-color: #f1f1f1;
}  
/*左侧栏list的item*/  
.nav_left .nav_left_items{  
  /*每个高30px*/  
  height: 33px;  
  /*垂直居中*/  
  line-height: 33px;  
  /*再设上下padding增加高度，总高42px*/  
  padding: 6px 0;  
  /*只设下边线*/  
  border-bottom: 2px solid #dedede;  
  /*文字14px*/  
  font-size: 14px; 
}  

/*右侧栏主盒子*/  
.nav_right{  
  /*右侧盒子使用了绝对定位*/  
  position: absolute;  
  top: 0;  
  right: 0;  
  flex: 1;  
  /*宽度75%，高度占满，并使用百分比布局*/  
  width: 75%;  
  padding: 7px;  
  box-sizing: border-box;  
  background: #fff;
  margin-top: 35px;  
}  
/*右侧栏list的item*/  
.nav_right .nav_right_items{  
  width: 100%;  
  height: 40px; 
  line-height:40px;
}  
