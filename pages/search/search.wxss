/*总体主盒子*/  
.container {  
  position: relative;  
  width: 100%;  
  height: 100%;  
  background-color: #fff;  
  color: #939393;
}
 
/*右侧栏主盒子*/  
.nav_right{  
  /*右侧盒子使用了绝对定位*/  
  position: absolute;  
  top: 0;  
  right: 0;  
  flex: 1;  
  width: 100%;  
  padding: 7px;  
  box-sizing: border-box;  
  background: #fff;
  margin-top: 35px;  
}  
/*右侧栏list的item*/  
.nav_right .nav_right_items{  
  width: 100%;  
  height: 40px; 
  line-height:40px;
}  
